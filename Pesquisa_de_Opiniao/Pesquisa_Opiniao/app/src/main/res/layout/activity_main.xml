<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesquisa de Opinião sobre a qualidade de Ensino da
                      UTFPR - Campus Pato Branco"/>

    <Button
        android:id="@+id/btRuim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUIM"/>

    <Button
        android:id="@+id/btBom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOM"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operações do Sistema"/>

    <Button
        android:id="@+id/btResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULTADO DA PESQUISA"/>

    <Button
        android:id="@+id/btIniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR PESQUISA"

</LinearLayout>